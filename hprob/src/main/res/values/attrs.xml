<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HprobAttrs">
        <attr name="shape" format="enum">
            <enum name="rect" value="0" />
            <enum name="round" value="1" />
        </attr>

        <!-- when the hpb_shape is round, this attr would be used. -->
        <attr name="radius" format="dimension" />

        <!-- The primary color for hpb -->
        <attr name="primary_color" format="color" />

        <!-- The secondary color for hpb -->
        <attr name="secondary_color" format="color" />

        <!-- When text is enabled, hpb will draw text on itself and default value is true. -->
        <attr name="text_enable" format="boolean" />

        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />

        <!-- The two rectangle may have a padding. Therefore inside_padding is the padding and default value is 0 -->
        <attr name="inside_padding" format="dimension" />

        <attr name="primary_thickness" format="dimension" />

        <!-- This attr will be used as the vertical position where the text is drew on hpb. mid is default-->
        <attr name="text_position_v" format="enum">
            <enum name="top" value="0" />
            <enum name="mid" value="1" />
            <enum name="bottom" value="2" />
        </attr>

        <!-- This attr will be used as the horizontal position where the text is drew on hpb. mid is default.-->
        <attr name="text_position_h" format="enum">
            <enum name="start" value="0" />
            <enum name="mid" value="1" />
            <enum name="end" value="2" />
        </attr>
    </declare-styleable>
</resources>